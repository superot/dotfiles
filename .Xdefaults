!--- FONT ---
Xft*dpi:                    96
Xft*antialias:              1
Xft*rgba:                   rgb
Xft*hinting:                1
Xft*hintstyle:              hintfull
Xft*autohint:               1
Xft*lcdfilter:              lcddefault

!--- GLOBAL ---
URxvt*perl-lib:             /home/g0d/.urxvt/ext
URxvt*perl-ext:             default,background,keysym-list,selection-autotransform,bell-command,block-graphics-to-ascii,matcher,clipboard-osc,digital-clock,readline,font-size,selection,eval
URxvt*xftAntialias:         true
URxvt*letterSpace:          1
URxvt*font:                 xft:Inconsolata\ Nerd\ Font\ Mono:style=Light:pixelsize=17:antialias=true:hinting=true,xft:Font\ Awesome:pixelsize=17
URxvt*boldFont:             xft:Inconsolata\ Nerd\ Font\ Mono:style=Light:pixelsize=17:antialias=true:hinting=true,xft:Font\ Awesome:pixelsize=17
URxvt*italicFont:           xft:Inconsolata\ Nerd\ Font\ Mono:style=Light:pixelsize=17:antialias=true:hinting=true,xft:Font\ Awesome:pixelsize=17
URxvt*bolditalicFont:       xft:Inconsolata\ Nerd\ Font\ Mono:style=Light:pixelsize=17:antialias=true:hinting=true,xft:Font\ Awesome:pixelsize=17
URxvt*skipBuiltinGlyphs:    false
URxvt*termName:				rxvt-unicode-256color
URxvt*urgentOnBell:         false
URxvt*visualBell:           false
URxvt*loginShell:			true
URxvt*saveLines:			10000
URxvt*scrollWithBuffer:		true
URxvt*skipScroll:			true
URxvt*scrollBar:			false
URxvt*scrollTtyOutput:		false
URxvt*scrollTtyKeypress:	true
URxvt*secondaryScreen:		1
URxvt*secondaryScroll:		0
URxvt*secondaryWheel:		1
URxvt*inputMethod:			ibus
URxvt*preeditType:			OverTheSpot
URxvt*imLocale:				en_US.UTF-8
URxvt*geometry:				80x24
URxvt*borderLess:			false
URxvt*externalBorder:		0
URxvt*internalBorder:		0
URxvt*intensityStyles:		false
URxvt*cursorBlink:			true
URxvt*cursorUnderline:      false
URxvt*pointerBlank:         true
URxvt*depth:				32
URxvt*transparent:			false
URxvt*shading:				100
URxvt*iso14755:				false
URxvt*iso14755_52:			false
URxvt*buffered:				false

!--- KEYSYM ---
URxvt*keysym.C-plus:		font-size:increase
URxvt*keysym.C-minus:		font-size:decrease
URxvt*keysym.C-S-Up:        font-size:incglobal
URxvt*keysym.C-S-Down:      font-size:decglobal
URxvt*keysym.C-equal:       font-size:reset
URxvt*keysym.C-slash:       font-size:show
URxvt*keysym.Home:			\033[1~
URxvt*keysym.End:			\033[4~
URxvt*keysym.M-Down:		\033[1;3B
URxvt*keysym.M-Up:			\033[1;3A
URxvt*keysym.M-Left:		\033[1;3D
URxvt*keysym.M-Right:		\033[1;3C
URxvt*keysym.Control-Up:	\033[1;5A
URxvt*keysym.Control-Down:	\033[1;5B
URxvt*keysym.Control-Left:	\033[1;5D
URxvt*keysym.Control-Right:	\033[1;5C

